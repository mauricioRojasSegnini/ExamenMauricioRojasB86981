@{
    ViewBag.Title = "Segnini's Pizza";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/ShoppingCartStyle.css" />
</head>
<body>
    
    <div class="card" style="margin-top: 25px;">
        @if(ViewBag.PersonalPizza.Count != 0)
        {
            <h3 class="card-header">
                <a href="#" class="display-6 text-primary">Tus pizzas personales</a>
            </h3>
            <div class="card-body">
                <div class="row">
                    <!---->
                    @foreach (var personalPizza in ViewBag.PersonalPizza)
                    {
                        <div class="col-sm" style="margin-bottom:20px">
                            <div class="card h-100 bg-light">
                                <div class="ProductsContainer">
                                    <div class="image">
                                        <div class="embed-responsive embed-responsive-4by3">
                                            <img src="~/images/Tupizza.png" alt="thsirt1" style="width: 100%; height: 190px;" />
                                        </div>
                                        <a class="add-cart cart1" href="#">Agregar</a>
                                        <input type="hidden" value="15" />
                                    </div>
                                    <h3 style="margin-top:5%">@personalPizza.name</h3>
                                </div>
                                <div class="card-body">
                                    <p>@personalPizza.Ingredients</p>
                                    <p>@personalPizza.Extras</p>
                                    <p>@personalPizza.Mass</p>
                                    <span style="color:red;float:right; font-size:x-large">₡@personalPizza.price </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm" style="margin-bottom:20px">

                        </div>
                        <div class="col-sm" style="margin-bottom:20px">

                        </div>
                    }
                </div>
            </div>

        }
        <h3 class="card-header">
            <a href="#" class="display-6 text-primary">Pizza</a>
        </h3>
        <div class="card-body">
            <div class="row">
                <!---->
                @foreach (var pizza in ViewBag.PizzasOnMenu)
                {
                    <div class="col-sm" style="margin-bottom:20px">
                        <div class="card h-100 bg-light">
                            <div class="ProductsContainer">
                                <div class="image">
                                    <div class="embed-responsive embed-responsive-4by3">
                                        <img src="~/images/@pizza.Image" alt="thsirt1" style="width: 360px; height: 190px;" />
                                    </div>
                                    <a class="add-cart cart1" href="#">Agregar</a>
                                </div>
                                <h3 style="margin-left:5%">@pizza.name</h3>
                            </div>
                            <div class="card-body">
                                <p>Ingredientes: @pizza.Ingredients</p>
                                <span style="color:red;float:right; font-size:x-large">₡@pizza.price </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div style="margin-top:5%">
            <h3 class="card-header">
                <a href="#" class="display-6 text-primary">Hamburguesas</a>
            </h3>
            <div class="card-body">
                <div class="row">
                    <!---->
                    @foreach (var burgers in ViewBag.BurgersOnMenu)
                    {
                        <div class="col-sm" style="margin-bottom:20px">
                            <div class="card h-100 bg-light">
                                <div class="ProductsContainer">
                                    <div class="image">
                                        <div class="embed-responsive embed-responsive-4by3">
                                            <img src="~/images/@burgers.Image" alt="thsirt1" style="width: 360px; height: 190px" />
                                        </div>

                                        <a class="add-cart cart1" href="#">Agregar</a>
                                    </div>
                                    <h3 style="margin-left:5%">@burgers.name</h3>
                                </div>
                                <div class="card-body">
                                    <p>Ingredientes: @burgers.Ingredients</p>
                                    <p>Acompañado de: @burgers.Accompaniment</p>
                                    <span style="color:red;float:right; font-size:x-large">₡@burgers.price </span>
                                </div>
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>
        <div style="margin-top:5%">
            <h3 class="card-header">
                <a href="#" class="display-6 text-primary">Bebidas</a>
            </h3>
            <div class="card-body">
                <div class="row">
                    <!---->
                    @foreach (var drinks in ViewBag.DrinksOnMenu)
                    {
                        <div class="col-sm" style="margin-bottom:20px">
                            <div class="card h-100 bg-light">
                                <div class="ProductsContainer">
                                    <div class="image">
                                        <div class="embed-responsive embed-responsive-4by3">
                                            <img src="~/images/@drinks.Image" alt="thsirt1" style="width: 360px; height: 190px" />
                                        </div>
                                        <a class="add-cart cart1" href="#">Agregar</a>
                                    </div>
                                    <h3 style="margin-left:5%">@drinks.name</h3>
                                </div>
                                <div class="card-body">
                                    <p>@drinks.Ingredients</p>
                                    <span style="color:red;float:right; font-size:x-large">₡@drinks.price </span>
                                </div>
                            </div>
                        </div>


                    }

                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
</body>
</html>
<script>
    document.addEventListener("click", function () {
        var personalPizzas = @Html.Raw(Json.Encode(ViewBag.PersonalPizza));
        var pizzas = @Html.Raw(Json.Encode(ViewBag.PizzasOnMenu));
        personalPizzas = personalPizzas.concat(pizzas);
        var burger = @Html.Raw(Json.Encode(ViewBag.BurgersOnMenu));
        personalPizzas = personalPizzas.concat(burger);
        var drinks = @Html.Raw(Json.Encode(ViewBag.DrinksOnMenu));
        personalPizzas = personalPizzas.concat(drinks);
        setMenu(personalPizzas);
    });
</script>
<script src="~/Scripts/ShoppingCart.js"></script>