<head>
    <title>Entrega a domicilio</title>
    <link rel="stylesheet" href="~/Content/ShoppingCartStyle.css" />
</head>

<body>
    <div class="container" style="height: 100%">
        <div class="card-body">
            <div class="row ">
                <p class="card-text">
                    <h2><i class="fas fa-map-marker-alt"></i>Dirección de envío</h2>
                </p>
                <hr />
                <div class="card rounded-3 bg-light">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col">
                                <div class="form-group row">
                                    <label for="exampleInputEmail1" class="form-label mt-4">Provincia</label>
                                    <input type="text" class="form-control" style="width: 95%;" id="provinceInput" aria-describedby="emailHelp" placeholder="-Ingrese la provincia-" >
                                    <p id="provinceError" class="text-danger"></p>
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-group row">
                                    <label for="exampleInputEmail1" class="form-label mt-4">Cantón</label>
                                    <input type="text" class="form-control" style="width: 95%;" id="cantonInput" aria-describedby="emailHelp" placeholder="-Ingrese la cantón-" >
                                    <p id="cantonError" class="text-danger"></p>
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-group row">
                                    <label for="exampleInputEmail1" class="form-label mt-4">Distrito</label>
                                    <input type="text" class="form-control" style="width: 95%;" id="distritInput" aria-describedby="emailHelp" placeholder="-Ingrese la distrito-" >
                                    <p id="distritError" class="text-danger"></p>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="form-group row">
                                <span class="small-font fw-bold"> Dirección exacta</span>
                                <input type="text" id="exactDirection" class="form-control"  />

                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="form-group row">
                                <span class="small-font fw-bold"> Otras señas (opcional)</span>
                                <input type="text" id="optionalDirections" class="form-control"  />
                            </div>
                        </div>
                        <hr />
                        <small id="emailHelp" style="text-align:center" class="form-text text-muted offset-4">O bien podés ingresar también el enlace de tu ubicación</small>
                        <div class="row mt-2">
                            <div class="form-group row">
                                <span class="small-font fw-bold"><i class="fas fa-location-arrow"></i> Ubicación de Waze o GoogleMaps (opcional)</span>
                                <input type="text" class="form-control" style="width: 95%;" id="additionalLinkAddress" aria-describedby="emailHelp" placeholder="-www.waze.com-">
                            </div>
                        </div>
                        @Html.ActionLink("Confirmar el pago", "PayMethod", "ShoppingCart", new {}, new { @id = "submit", @class = "btn btn-primary mt-5 col-3 offset-9", @style = "display: none" })
                        <input type="button" class="btn btn-primary mt-5 col-3 offset-9" value="Pagar" onclick="checkData()" />
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="~/Scripts/homeDelivery.js" type="text/javascript"></script>
</body>
<script>
    function checkData() {
        let valid = true;
        let province = document.getElementById("provinceInput").value;
        let canton = document.getElementById("cantonInput").value;
        let district = document.getElementById("distritInput").value;
        let addressLink = document.getElementById("additionalLinkAddress").value;
        console.log(addressLink);
        if (addressLink == '') {
            valid = checkValidInput(province, "#provinceError", "Por favor ingrese la provincia");
            valid = checkValidInput(canton, "#cantonError", "Por favor ingrese el cantón");
            valid = checkValidInput(district, "#distritError", "Por favor ingrese el distrito");
            if (valid) {
                document.getElementById("submit").click();
            }
        } else {
            document.getElementById("submit").click();
        }
    }
    function checkValidInput(containerValue, errorContainerId, errorMsg) {
        let valid = true;
        if (containerValue == '') {
            document.querySelector(errorContainerId).innerHTML = errorMsg;
            valid = false;
        }
        return valid;
    }
</script>